<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Computer - Admin Panel</title>
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
  <div class="page-wrapper">
    <!-- Header Section -->
    <header class="header">
      <div class="header-content">
        <div class="logo-section">
          <i class="fas fa-qrcode logo-icon"></i>
          <h1 class="logo-text">Admin Panel</h1>
        </div>
        <nav class="nav-menu">
          <a href="/admin" class="nav-link">
            <i class="fas fa-tachometer-alt"></i>
            <span>Dashboard</span>
          </a>
          <a href="/admin/computers" class="nav-link">
            <i class="fas fa-laptop"></i>
            <span>Manage Computers</span>
          </a>
          <a href="/admin/add-computer" class="nav-link active">
            <i class="fas fa-plus"></i>
            <span>Add Computer</span>
          </a>
          <a href="/computers" class="nav-link">
            <i class="fas fa-eye"></i>
            <span>View Public</span>
          </a>
          <a href="/admin/logout" class="nav-link" style="color: #dc2626;">
            <i class="fas fa-sign-out-alt"></i>
            <span>Logout</span>
          </a>
        </nav>
      </div>
    </header>

    <!-- Main Content -->
    <main class="main-content">
      <div class="container">
        <!-- Page Header -->
        <div class="page-header">
          <div class="page-title-section">
            <h2 class="page-title">
              <i class="fas fa-plus-circle"></i>
              Add New Computer
            </h2>
            <p class="page-subtitle">Add a new computer to the database with detailed specifications</p>
          </div>
          <div class="page-actions">
            <a href="/admin" class="btn btn-secondary">
              <i class="fas fa-arrow-left"></i>
              Back to Dashboard
            </a>
          </div>
        </div>

        <!-- Form Section -->
        <div class="form-section admin-form">
          <div class="form-header">
            <h3 class="form-title">
              <i class="fas fa-laptop"></i>
              Computer Specifications
            </h3>
            <p class="form-description">Fill in all the required computer specifications below</p>
          </div>

          <form action="/admin/add-computer" method="POST" class="computer-form" id="adminComputerForm">
            <div class="form-grid">
              <!-- Basic Information -->
              <div class="form-section-group">
                <h4 class="section-subtitle">
                  <i class="fas fa-info-circle"></i>
                  Basic Information
                </h4>
                
                <div class="form-group">
                  <label for="serial_number" class="form-label required">
                    <i class="fas fa-barcode"></i>
                    Serial Number *
                  </label>
                  <input type="text" id="serial_number" name="serial_number" class="form-input" 
                         placeholder="e.g., LAP-2024-001" required>
                  <div class="input-icon">
                    <i class="fas fa-barcode"></i>
                  </div>
                </div>

                <div class="form-group">
                  <label for="computer_name" class="form-label">
                    <i class="fas fa-tag"></i>
                    Computer Name
                  </label>
                  <input type="text" id="computer_name" name="computer_name" class="form-input" 
                         placeholder="e.g., Office Laptop 1">
                  <div class="input-icon">
                    <i class="fas fa-tag"></i>
                  </div>
                </div>

                <div class="form-group">
                  <label for="department" class="form-label">
                    <i class="fas fa-building"></i>
                    Department
                  </label>
                  <input type="text" id="department" name="department" class="form-input" 
                         placeholder="e.g., IT Department, Engineering, Sales">
                  <div class="input-icon">
                    <i class="fas fa-building"></i>
                  </div>
                </div>

                <div class="form-group">
                  <label for="location" class="form-label">
                    <i class="fas fa-map-marker-alt"></i>
                    Location
                  </label>
                  <input type="text" id="location" name="location" class="form-input" 
                         placeholder="e.g., Room 101, Building A">
                  <div class="input-icon">
                    <i class="fas fa-map-marker-alt"></i>
                  </div>
                </div>
              </div>

              <!-- Hardware Specifications -->
              <div class="form-section-group">
                <h4 class="section-subtitle">
                  <i class="fas fa-microchip"></i>
                  Hardware Specifications
                </h4>
                
                <div class="form-group">
                  <label for="cpu" class="form-label required">
                    <i class="fas fa-microchip"></i>
                    CPU Model *
                  </label>
                  <input type="text" id="cpu" name="cpu" class="form-input" 
                         placeholder="e.g., Intel Core i7-12700K" required>
                  <div class="input-icon">
                    <i class="fas fa-microchip"></i>
                  </div>
                </div>

                <div class="form-group">
                  <label for="ram" class="form-label required">
                    <i class="fas fa-memory"></i>
                    RAM *
                  </label>
                  <input type="text" id="ram" name="ram" class="form-input" 
                         placeholder="e.g., 32GB DDR4" required>
                  <div class="input-icon">
                    <i class="fas fa-memory"></i>
                  </div>
                </div>

                <div class="form-group">
                  <label for="storage" class="form-label required">
                    <i class="fas fa-hdd"></i>
                    Storage *
                  </label>
                  <input type="text" id="storage" name="storage" class="form-input" 
                         placeholder="e.g., 1TB NVMe SSD" required>
                  <div class="input-icon">
                    <i class="fas fa-hdd"></i>
                  </div>
                </div>

                <div class="form-group">
                  <label for="gpu" class="form-label">
                    <i class="fas fa-tv"></i>
                    GPU
                  </label>
                  <input type="text" id="gpu" name="gpu" class="form-input" 
                         placeholder="e.g., NVIDIA RTX 3080">
                  <div class="input-icon">
                    <i class="fas fa-tv"></i>
                  </div>
                </div>
              </div>

              <!-- Software & Network -->
              <div class="form-section-group">
                <h4 class="section-subtitle">
                  <i class="fab fa-windows"></i>
                  Software & Network
                </h4>
                
                <div class="form-group">
                  <label for="os" class="form-label required">
                    <i class="fab fa-windows"></i>
                    Operating System *
                  </label>
                  <input type="text" id="os" name="os" class="form-input" 
                         placeholder="e.g., Windows 11 Pro" required>
                  <div class="input-icon">
                    <i class="fab fa-windows"></i>
                  </div>
                </div>

                <div class="form-group">
                  <label for="ip_address" class="form-label">
                    <i class="fas fa-network-wired"></i>
                    IP Address
                  </label>
                  <input type="text" id="ip_address" name="ip_address" class="form-input" 
                         placeholder="e.g., 192.168.1.100">
                  <div class="input-icon">
                    <i class="fas fa-network-wired"></i>
                  </div>
                </div>

                <div class="form-group">
                  <label for="mac_address" class="form-label">
                    <i class="fas fa-wifi"></i>
                    MAC Address
                  </label>
                  <input type="text" id="mac_address" name="mac_address" class="form-input" 
                         placeholder="e.g., 00:1B:44:11:3A:B7">
                  <div class="input-icon">
                    <i class="fas fa-wifi"></i>
                  </div>
                </div>
              </div>

              <!-- Additional Information -->
              <div class="form-section-group">
                <h4 class="section-subtitle">
                  <i class="fas fa-clipboard-list"></i>
                  Additional Information
                </h4>
                
                <div class="form-group">
                  <label for="purchase_date" class="form-label">
                    <i class="fas fa-calendar"></i>
                    Purchase Date
                  </label>
                  <input type="date" id="purchase_date" name="purchase_date" class="form-input">
                  <div class="input-icon">
                    <i class="fas fa-calendar"></i>
                  </div>
                </div>

                <div class="form-group">
                  <label for="warranty_expiry" class="form-label">
                    <i class="fas fa-shield-alt"></i>
                    Warranty Expiry
                  </label>
                  <input type="date" id="warranty_expiry" name="warranty_expiry" class="form-input">
                  <div class="input-icon">
                    <i class="fas fa-shield-alt"></i>
                  </div>
                </div>

                <div class="form-group">
                  <label for="notes" class="form-label">
                    <i class="fas fa-sticky-note"></i>
                    Notes
                  </label>
                  <textarea id="notes" name="notes" class="form-textarea" 
                            placeholder="Additional notes about this computer..."></textarea>
                  <div class="input-icon">
                    <i class="fas fa-sticky-note"></i>
                  </div>
                </div>
              </div>
            </div>

            <!-- Form Actions -->
            <div class="form-actions">
              <button type="button" class="btn btn-secondary" onclick="resetForm()">
                <i class="fas fa-undo"></i>
                Reset Form
              </button>
              <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i>
                Save & Generate QR Code
              </button>
            </div>
          </form>
        </div>

        <!-- Form Help -->
        <div class="form-help">
          <div class="help-header">
            <i class="fas fa-question-circle"></i>
            <h4>Form Guidelines</h4>
          </div>
          <div class="help-content">
            <div class="help-item">
              <i class="fas fa-asterisk"></i>
              <div>
                <h5>Required Fields</h5>
                <p>Fields marked with * are mandatory and must be filled</p>
              </div>
            </div>
            <div class="help-item">
              <i class="fas fa-barcode"></i>
              <div>
                <h5>Serial Number</h5>
                <p>Must be unique for each computer in the database</p>
              </div>
            </div>
            <div class="help-item">
              <i class="fas fa-qrcode"></i>
              <div>
                <h5>QR Code</h5>
                <p>A QR code will be generated automatically after saving</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
      <div class="footer-content">
        <p>&copy; 2024 Computer QR Generator - Admin Panel. All rights reserved.</p>
      </div>
    </footer>
  </div>

  <script>
    // Form validation and reset functionality
    function resetForm() {
      if (confirm('Are you sure you want to reset the form? All entered data will be lost.')) {
        document.getElementById('adminComputerForm').reset();
      }
    }

    // Auto-generate computer name from serial number
    document.getElementById('serial_number').addEventListener('input', function() {
      const serial = this.value;
      const computerName = document.getElementById('computer_name');
      if (serial && !computerName.value) {
        computerName.value = `Computer ${serial}`;
      }
    });

    // Form submission handling
    document.getElementById('adminComputerForm').addEventListener('submit', function(e) {
      const requiredFields = this.querySelectorAll('[required]');
      let isValid = true;
      
      requiredFields.forEach(field => {
        if (!field.value.trim()) {
          field.classList.add('error');
          isValid = false;
        } else {
          field.classList.remove('error');
        }
      });
      
      if (!isValid) {
        e.preventDefault();
        alert('Please fill in all required fields marked with *');
      }
    });
  </script>
</body>
</html> 