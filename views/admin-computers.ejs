<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Computers - Admin Panel</title>
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
  <div class="page-wrapper">
    <!-- Header Section -->
    <header class="header">
      <div class="header-content">
        <div class="logo-section">
          <i class="fas fa-qrcode logo-icon"></i>
          <h1 class="logo-text">Admin Panel</h1>
        </div>
        <nav class="nav-menu">
          <a href="/admin" class="nav-link">
            <i class="fas fa-tachometer-alt"></i>
            <span>Dashboard</span>
          </a>
          <a href="/admin/computers" class="nav-link active">
            <i class="fas fa-laptop"></i>
            <span>Manage Computers</span>
          </a>
          <a href="/admin/add-computer" class="nav-link">
            <i class="fas fa-plus"></i>
            <span>Add Computer</span>
          </a> 
          <a href="/computers" class="nav-link">
            <i class="fas fa-eye"></i>
            <span>View Public</span>
          </a>
          <a href="/admin/logout" class="nav-link" style="color: #dc2626;">
            <i class="fas fa-sign-out-alt"></i>
            <span>Logout</span>
          </a>
        </nav>
      </div>
    </header>

    <!-- Main Content -->
    <main class="main-content">
      <div class="container">
        <!-- Page Header -->
        <div class="page-header">
          <div class="page-title-section">
            <h2 class="page-title">
              <i class="fas fa-laptop"></i>
              Manage Computers
            </h2>
            <p class="page-subtitle">View and manage all computers in the database</p>
          </div>
          <div class="page-actions">
            <a href="/admin/add-computer" class="btn btn-primary">
              <i class="fas fa-plus"></i>
              Add New Computer
            </a>
            <a href="/admin" class="btn btn-secondary">
              <i class="fas fa-arrow-left"></i>
              Back to Dashboard
            </a>
          </div>
        </div>

        <!-- Search and Filter Section -->
        <div class="search-section">
          <div class="search-box">
            <i class="fas fa-search search-icon"></i>
            <input type="text" id="searchInput" class="search-input" placeholder="Search computers by serial number, CPU, or OS...">
          </div>
          <div class="filter-options">
            <select id="sortSelect" class="filter-select">
              <option value="newest">Newest First</option>
              <option value="oldest">Oldest First</option>
              <option value="serial">Serial Number</option>
              <option value="cpu">CPU Model</option>
              <option value="department">Department</option>
              <option value="location">Location</option>
            </select>
            <button class="btn btn-secondary" onclick="exportData()">
              <i class="fas fa-download"></i>
              Export
            </button>
          </div>
        </div>

        <!-- Statistics Bar -->
        <div class="stats-bar">
          <div class="stat-item">
            <i class="fas fa-laptop"></i>
            <span>Total: <strong><%= computers.length %></strong></span>
          </div>
          <div class="stat-item">
            <i class="fas fa-calendar-day"></i>
            <span>Today: <strong id="todayCount">0</strong></span>
          </div>
          <div class="stat-item">
            <i class="fas fa-qrcode"></i>
            <span>QR Codes: <strong><%= computers.length %></strong></span>
          </div>
        </div>

        <!-- Computers List -->
        <div class="computers-container">
          <% if (computers && computers.length > 0) { %>
            <div class="computers-grid" id="computersGrid">
              <% computers.forEach(computer => { %>
                <div class="computer-card admin-card" data-serial="<%= computer.serial_number.toLowerCase() %>" data-cpu="<%= computer.cpu.toLowerCase() %>" data-os="<%= computer.os.toLowerCase() %>" data-location="<%= (computer.location || '').toLowerCase() %>" data-department="<%= (computer.department || '').toLowerCase() %>">
                  <div class="card-header">
                    <div class="computer-id">
                      <i class="fas fa-hashtag"></i>
                      #<%= computer.id %>
                    </div>
                    <div class="computer-status">
                      <span class="status-badge active">Active</span>
                    </div>
                  </div>
                  
                  <div class="card-body">
                    <div class="computer-specs">
                      <% if (computer.computer_name) { %>
                        <div class="spec-item">
                          <i class="fas fa-tag"></i>
                          <div class="spec-content">
                            <span class="spec-label">Name</span>
                            <span class="spec-value"><%= computer.computer_name %></span>
                          </div>
                        </div>
                      <% } %>
                      
                      <div class="spec-item">
                        <i class="fas fa-microchip"></i>
                        <div class="spec-content">
                          <span class="spec-label">CPU</span>
                          <span class="spec-value"><%= computer.cpu %></span>
                        </div>
                      </div>
                      
                      <div class="spec-item">
                        <i class="fas fa-memory"></i>
                        <div class="spec-content">
                          <span class="spec-label">RAM</span>
                          <span class="spec-value"><%= computer.ram %></span>
                        </div>
                      </div>
                      
                      <div class="spec-item">
                        <i class="fas fa-hdd"></i>
                        <div class="spec-content">
                          <span class="spec-label">Storage</span>
                          <span class="spec-value"><%= computer.storage %></span>
                        </div>
                      </div>
                      
                      <% if (computer.gpu && computer.gpu !== 'Integrated') { %>
                        <div class="spec-item">
                          <i class="fas fa-tv"></i>
                          <div class="spec-content">
                            <span class="spec-label">GPU</span>
                            <span class="spec-value"><%= computer.gpu %></span>
                          </div>
                        </div>
                      <% } %>
                      
                      <div class="spec-item">
                        <i class="fab fa-windows"></i>
                        <div class="spec-content">
                          <span class="spec-label">OS</span>
                          <span class="spec-value"><%= computer.os %></span>
                        </div>
                      </div>
                      
                      <div class="spec-item">
                        <i class="fas fa-barcode"></i>
                        <div class="spec-content">
                          <span class="spec-label">Serial</span>
                          <span class="spec-value serial-number"><%= computer.serial_number %></span>
                        </div>
                      </div>
                      
                      <% if (computer.department) { %>
                        <div class="spec-item">
                          <i class="fas fa-building"></i>
                          <div class="spec-content">
                            <span class="spec-label">Department</span>
                            <span class="spec-value"><%= computer.department %></span>
                          </div>
                        </div>
                      <% } %>
                      
                      <% if (computer.location) { %>
                        <div class="spec-item">
                          <i class="fas fa-map-marker-alt"></i>
                          <div class="spec-content">
                            <span class="spec-label">Location</span>
                            <span class="spec-value"><%= computer.location %></span>
                          </div>
                        </div>
                      <% } %>
                      
                      <% if (computer.ip_address) { %>
                        <div class="spec-item">
                          <i class="fas fa-network-wired"></i>
                          <div class="spec-content">
                            <span class="spec-label">IP</span>
                            <span class="spec-value"><%= computer.ip_address %></span>
                          </div>
                        </div>
                      <% } %>
                    </div>
                  </div>
                  
                  <div class="card-footer">
                    <div class="card-actions">
                      <a href="/computer/<%= computer.id %>" class="btn btn-secondary btn-sm">
                        <i class="fas fa-eye"></i>
                        View
                      </a>
                      <!-- <a href="/admin/computer/<%= computer.id %>/edit" class="btn btn-primary btn-sm">
                        <i class="fas fa-edit"></i>
                        Edit
                      </a> -->
                      <button class="btn btn-success btn-sm" onclick="generateQR(<%= computer.id %>)">
                        <i class="fas fa-qrcode"></i>
                        QR
                      </button>
                      <button class="btn btn-danger btn-sm" onclick="deleteComputer(<%= computer.id %>, '<%= computer.serial_number %>')">
                        <i class="fas fa-trash"></i>
                        Delete
                      </button>
                    </div>
                    <div class="card-date">
                      <i class="fas fa-calendar"></i>
                      <span><%= new Date(computer.created_at || Date.now()).toLocaleDateString() %></span>
                    </div>
                  </div>
                </div>
              <% }); %>
            </div>
          <% } else { %>
            <!-- Empty State -->
            <div class="empty-state">
              <div class="empty-icon">
                <i class="fas fa-laptop"></i>
              </div>
              <h3>No Computers Found</h3>
              <p>You haven't added any computers yet. Start by adding your first computer to the database.</p>
              <a href="/admin/add-computer" class="btn btn-primary">
                <i class="fas fa-plus"></i>
                Add First Computer
              </a>
            </div>
          <% } %>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
      <div class="footer-content">
        <p>&copy; 2024 Computer QR Generator - Admin Panel. All rights reserved.</p>
      </div>
    </footer>
  </div>

  <script>
    // Search functionality
    document.getElementById('searchInput').addEventListener('input', function() {
      const searchTerm = this.value.toLowerCase();
      const cards = document.querySelectorAll('.computer-card');
      let visibleCount = 0;
      
      cards.forEach(card => {
        const serial = card.dataset.serial;
        const cpu = card.dataset.cpu;
        const os = card.dataset.os;
        const location = card.dataset.location;
        const department = card.dataset.department;
        
        if (serial.includes(searchTerm) || cpu.includes(searchTerm) || 
            os.includes(searchTerm) || location.includes(searchTerm) || 
            department.includes(searchTerm)) {
          card.style.display = 'block';
          visibleCount++;
        } else {
          card.style.display = 'none';
        }
      });
      
      // Update today count (mock calculation)
      document.getElementById('todayCount').textContent = Math.floor(Math.random() * 5) + 1;
    });

    // Sort functionality
    document.getElementById('sortSelect').addEventListener('change', function() {
      const sortBy = this.value;
      const grid = document.getElementById('computersGrid');
      const cards = Array.from(grid.children);
      
      cards.sort((a, b) => {
        switch(sortBy) {
          case 'newest':
            return parseInt(a.querySelector('.computer-id').textContent.replace('#', '')) - 
                   parseInt(b.querySelector('.computer-id').textContent.replace('#', ''));
          case 'oldest':
            return parseInt(b.querySelector('.computer-id').textContent.replace('#', '')) - 
                   parseInt(a.querySelector('.computer-id').textContent.replace('#', ''));
          case 'serial':
            return a.dataset.serial.localeCompare(b.dataset.serial);
          case 'cpu':
            return a.dataset.cpu.localeCompare(b.dataset.cpu);
          case 'department':
            return a.dataset.department.localeCompare(b.dataset.department);
          case 'location':
            return a.dataset.location.localeCompare(b.dataset.location);
          default:
            return 0;
        }
      });
      
      cards.forEach(card => grid.appendChild(card));
    });

    // Generate QR function
    function generateQR(computerId) {
      window.location.href = `/generate-qr/${computerId}`;
    }

    // Delete computer function
    function deleteComputer(computerId, serialNumber) {
      if (confirm(`Are you sure you want to delete computer #${computerId} (${serialNumber})? This action cannot be undone.`)) {
        // Send delete request
        fetch(`/admin/computer/${computerId}/delete`, {
          method: 'DELETE',
          headers: {
            'Content-Type': 'application/json',
          }
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            // Remove the card from DOM
            const card = document.querySelector(`[data-serial="${serialNumber.toLowerCase()}"]`);
            if (card) {
              card.remove();
              // Update total count
              const totalCards = document.querySelectorAll('.computer-card').length;
              document.querySelector('.stat-item strong').textContent = totalCards;
            }
            alert('Computer deleted successfully!');
          } else {
            alert('Error deleting computer: ' + data.message);
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('Error deleting computer. Please try again.');
        });
      }
    }

    // Export data function
    function exportData() {
      // Show loading message
      const exportBtn = event.target;
      const originalText = exportBtn.innerHTML;
      exportBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Exporting...';
      exportBtn.disabled = true;
      
      // Use server-side Excel export directly
      window.location.href = '/admin/export-computers';
      
      // Reset button after a delay
      setTimeout(() => {
        exportBtn.innerHTML = originalText;
        exportBtn.disabled = false;
      }, 3000);
    }

    // Initialize today count
    document.addEventListener('DOMContentLoaded', function() {
      document.getElementById('todayCount').textContent = Math.floor(Math.random() * 5) + 1;
    });
  </script>
</body>
</html> 